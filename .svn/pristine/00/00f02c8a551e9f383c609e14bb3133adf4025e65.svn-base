    // 初始化
    $(function () {
        function parseUrl(){
            var url=location.href;
            var i=url.indexOf('?');
            if(i==-1)return 0;
            var querystr=url.substr(i+1);
            var arr1=querystr.split('&');
            var arr2=new Object();
            for  (i in arr1){
                var ta=arr1[i].split('=');
                arr2[ta[0]]=ta[1];
            }
            return arr2;
        }
        var v=parseUrl()
        switch (Number(v.id)) {
            case 2:
                $('#suerBtn').html('分配工程师')
                id=v.id
                break;
            case 3:
                $('#suerBtn').html('确认出发')
                id=v.id
                $("#newEngineer").removeClass("D_none");
                break;
            case 4:
                $('#suerBtn').html('确认到达')
                id=v.id
                $("#newEngineer").addClass("D_none");
                break;
            case 5:
                $('#suerBtn').html('开始服务')
                id=v.id
                break;
            case 6:
                $('#suerBtn').html('确认完成服务')
                id=v.id
                //是否显示取消订单按钮
                $('#cancelBtn').addClass('D_none')
                break;
            default:
                break

        }
    });
    layui.use('laydate', function () {
        var laydate = layui.laydate;
        // laydate.skin(lib)

        var start = {
            format: 'YYYY-MM-DD hh:mm:ss',
            istime: true,
            issure: false,
            isclear: false,
            fixed: true
        };
        document.querySelector('#test5').onclick = function () {
            start.elem = this;
            laydate(start);
        }

    })
    // 打开弹框
    $('#oneBtn').bind('click', function () {
        $("#D_none").removeClass("D_none");
